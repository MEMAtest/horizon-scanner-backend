{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "src/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/refresh",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "START_SERVER": "true"
  }
}