{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "api/cron/daily-digest.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    { "src": "/api/cron/daily-digest", "dest": "/api/cron/daily-digest.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 6 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "START_SERVER": "false",
    "VERCEL": "1"
  }
}
