{
  "name": "regcanary",
  "version": "2.0.0",
  "description": "RegCanary - Enterprise Regulatory Intelligence Platform - Comprehensive monitoring of UK and international financial regulatory authorities",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:playwright": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/routes src/services src/utils",
    "lint:fix": "eslint src/ --fix",
    "validate": "node scripts/validate-system.js",
    "cleanup": "node scripts/cleanup-database.js",
    "refresh": "node scripts/manual-refresh.js",
    "stats": "node scripts/show-stats.js",
    "digest:send": "node scripts/send-daily-digest.js",
    "digest:test": "node scripts/test-daily-digest-cron.js",
    "setup": "node scripts/setup-environment.js",
    "monitor:scrapes": "node scripts/run-scrape-monitor.js",
    "build": "echo 'No build step required for Node.js application'",
    "health": "curl -f http://localhost:3000/health || curl -f http://localhost:3001/health || curl -f http://localhost:3002/health || exit 1"
  },
  "keywords": [
    "regulatory",
    "compliance",
    "financial-services",
    "intelligence",
    "monitoring",
    "fca",
    "pra",
    "bank-of-england",
    "regulatory-technology",
    "fintech",
    "regtech"
  ],
  "author": {
    "name": "RegCanary",
    "email": "contact@regcanary.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MEMAtest/horizon-scanner-backend.git"
  },
  "bugs": {
    "url": "https://github.com/MEMAtest/horizon-scanner-backend/issues"
  },
  "homepage": "https://regcanary.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "get-port": "^7.1.0",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "puppeteer": "^24.21.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "resend": "^6.5.2",
    "rss-parser": "^3.13.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    },
    "overrides": [
      {
        "files": [
          "src/components/**/*.js",
          "src/widgets/**/*.js",
          "src/public/js/**/*.js"
        ],
        "rules": {
          "no-unused-vars": "off",
          "no-undef": "off"
        }
      }
    ],
    "rules": {
      "no-console": "off",
      "space-before-function-paren": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "data/",
      "logs/",
      "tests/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "deployment": {
      "platforms": [
        "vercel",
        "heroku",
        "railway",
        "render",
        "aws",
        "gcp",
        "azure"
      ],
      "database": {
        "preferred": "postgresql",
        "fallback": "json-file"
      },
      "ai": {
        "provider": "groq",
        "model": "llama-3.1-8b-instant"
      }
    },
    "monitoring": {
      "sources": {
        "rss_feeds": 7,
        "websites": 12,
        "total": 19
      },
      "authorities": [
        "FCA",
        "PRA",
        "BoE",
        "PSR",
        "TPR",
        "HMT",
        "ESMA",
        "EBA",
        "FATF",
        "FSB",
        "Treasury Committee",
        "OFSI",
        "JMLSG",
        "Pay.UK"
      ]
    }
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "peerDependencies": {
    "node": ">=16.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },
  "directories": {
    "lib": "src/",
    "test": "tests/",
    "doc": "docs/"
  },
  "files": [
    "src/",
    "scripts/",
    "docs/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
